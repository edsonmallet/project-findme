{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",                     
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*.ts"]
}
